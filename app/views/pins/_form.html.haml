= simple_form_for @pin, html: { multipart: true } do |f|
	- if @pin.errors.any?
		#errors
			%h2
				= pluralize(@pin.errors.count, "error")
				prevented this Pin from saving
			%ul
				- @pin.errors.full_messages.each do |msg|
					%li= msg

	.form-group
	= f.input :image, input_html: {}

	.form-group
		= f.input :title, input_html: { class: 'form-control' }

		.form-group
		= f.input :link, input_html: { class: 'form-control' }

		.form-group
			= f.input :address, input_html: { class: 'form-control' }

		.form-group
			= f.input :city, input_html: { class: 'form-control' }

		.form-group
			= f.input :hours, input_html: { class: 'form-control' }

		.form-group
		= f.input :description, input_html: { class: 'form-control' }

	= f.button :submit, class: "btn btn-primary"